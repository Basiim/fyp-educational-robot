<div class="header">
        <h1 style="text-align: center;">{{viewTitle}}</h1>
        <p>sending data to: <span id="curIP">0.0.0.0</span></p>
    </div>
    <div class="main">
        <!-- BLOCKLY WORKSPACE -->
        <div id="blocklyDiv" style="height: 70vh; width: 100vw;"></div>
        <xml id="toolbox" style="display: none;">
            <category name="START" colour="#00d080" toolboxitemid="start">
                <block type="input" disabled='disabled'></block>
            </category>
            <category name="MOVEMENT" colour="#07b7a6" toolboxitemid="movement">
                <block type="forward"></block>
                <block type="backward"></block>
                <block type="stop"></block>
                <block type="direction"></block>
                <block type="speed"></block>
            </category>
            <category name="LOOPS" colour="#fc832e" toolboxitemid="loops">
                <block type="repeat"></block>
                <block type="for"></block>
                <block type="while"></block>
            </category>
            <category name="CONDITIONS" colour="#edc620" toolboxitemid="conditions">
                <block type="ifelse"></block>
                <block type="if"></block>
            </category>
            <category name="MATH/LOGIC" colour="#8831c2" toolboxitemid="math">
                <block type="math_number"></block>
                <block type="logic_boolean"></block>
            </category>
            <category name="VARIABLES" colour="#6aa2b7" toolboxitemid="variables"></category>
            <category name="FUNCTIONS" colour="#412f9d" toolboxitemid="functions"></category>
            <category name="MISC" colour="#fe96aa" toolboxitemid="misc">
                <block type="delay"></block>
            </category>
        </xml>
        <!-- Default block -->
        <xml id="main" style="display: none">
            <block type="input"></block>
        </xml>
    </div>
    <div class="cmds" id="cmds"></div><br>
    <input type="text" placeholder="IP address" id="ipAdd">
    <button type="button" onclick="saveIP();">Save IP</button>
    <button onclick="runCode()"><i class="fa fa-play"></i>  Run Code</button>
    <button onclick="showCode()"><i class="fa fa-bars"></i>  Show Code</button>
    <button onclick="saveCode()"><i class="fa fa-save"></i>  Save Code</button>
    <input type="file" id="files" name="file" /> 
    <button onclick="loadCode()">Load Code</button>

    
    

    